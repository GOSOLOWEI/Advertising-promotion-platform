{
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "no-unused-vars": "warn",
    "no-use-before-define": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "pages",
            "./src/pages"
          ]
          // ["common", "./src/common"],
          // ["@utils", "./src/utils"],
          // ["@components", "./src/components"],
          // ["context", "./src/context"],
          // ["api", "./src/api"],
          // ["store", "./src/store"]
        ],
        "extensions": [
          ".ts",
          ".tsx",
          ".js",
          ".jsx",
          ".json",
          ".d.ts"
        ]
      }
    }
  }
}